@{
  Layout = "_Layout";
}

@model CityHallTracker.Models.CouncilMember

<h2>Councilmember Details</h2>
<hr />
<h3>@Html.DisplayFor(model => model.CouncilMemberName)</h3>
  <img src= "@Url.Content(Model.CouncilMemberPhoto)" alt="Image" />


@if(@Model.JoinEntities.Count == 0)
{
  <p>This Councilmember does not have any Council Actions.</p>
}
else
{
  <h4>Council Actions the Councilmember has:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.CouncilAction.CouncilActionTitle <span class ="text-orientation-right-css">@ViewBag.CouncilActionId</span></li>
  }
  </ul>
}

