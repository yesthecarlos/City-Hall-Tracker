@{
  Layout = "_Layout";
}

@using CityHallTracker.Models;

<h1>Councilmembers</h1>

@if (@Model.Count == 0)
{
  <h3>No Councilmembers here!</h3>
} 

@foreach (CouncilMember CouncilMember in Model)
{
  <li>@Html.ActionLink($"{CouncilMember.CouncilMemberName}", "Details", new { id = CouncilMember.CouncilMemberId })</li>
}
<p>@Html.ActionLink("Add new Councilmember", "Create")</p>
